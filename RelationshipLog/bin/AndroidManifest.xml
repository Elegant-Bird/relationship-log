<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loiseauelegante.relationshiplog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.loiseauelegante.relationshiplog.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.loiseauelegante.relationshiplog.CalendarLogActivity"
            android:label="@string/title_activity_calendar_log"
            android:parentActivityName="com.loiseauelegante.relationshiplog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loiseauelegante.relationshiplog.MainActivity" />
        </activity>
        <activity
            android:name="com.loiseauelegante.relationshiplog.AddEntryActivity"
            android:label="@string/title_activity_add_entry"
            android:parentActivityName="com.loiseauelegante.relationshiplog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loiseauelegante.relationshiplog.MainActivity" />
        </activity>
        <activity
            android:name="com.loiseauelegante.relationshiplog.ProConActivity"
            android:label="@string/title_activity_pro_con"
            android:parentActivityName="com.loiseauelegante.relationshiplog.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loiseauelegante.relationshiplog.MainActivity" />
        </activity>
    </application>

</manifest>